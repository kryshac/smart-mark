{
  "name": "smart-mark",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "lint:ts": "./node_modules/.bin/tslint -c tslint.json 'src/**/*.ts'",
    "lint:ts:fix": "./node_modules/.bin/tslint -c tslint.json 'src/**/*.ts' --fix",
    "lint:scss": "./node_modules/.bin/stylelint 'src/**/*.scss'--syntax scss",
    "lint:scss:fix": "./node_modules/.bin/stylelint 'src/**/*.scss'--syntax scss --fix",
    "lint:html": "./node_modules/htmlhint/bin/htmlhint --config .htmlhintrc.json 'src/**/*.html'",
    "lint:html:fix": "./node_modules/htmlhint/bin/htmlhint --config .htmlhintrc.json 'src/**/*.html' --fix",
    "format:check": "./node_modules/prettier/bin-prettier.js --config ./.prettierrc --list-different 'src/**/*.ts'",
    "format:all": "./node_modules/prettier/bin-prettier.js --config ./.prettierrc --write 'src/**/*.ts'",
    "format:fix": "./node_modules/pretty-quick/bin/pretty-quick.js --staged"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.3",
    "@angular/cdk": "^6.3.0",
    "@angular/common": "^6.0.3",
    "@angular/compiler": "^6.0.3",
    "@angular/core": "^6.0.3",
    "@angular/flex-layout": "^6.0.0-beta.16",
    "@angular/forms": "^6.0.3",
    "@angular/http": "^6.0.6",
    "@angular/material": "^6.2.1",
    "@angular/platform-browser": "^6.0.3",
    "@angular/platform-browser-dynamic": "^6.0.3",
    "@angular/router": "^6.0.3",
    "@ngrx/effects": "^6.0.1",
    "@ngrx/entity": "^6.0.1",
    "@ngrx/store": "^6.0.1",
    "apollo-angular": "^1.1.1",
    "apollo-angular-link-http": "^1.1.0",
    "apollo-cache-inmemory": "^1.2.5",
    "apollo-client": "^2.3.5",
    "apollo-link": "^1.2.2",
    "apollo-link-ws": "^1.0.8",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.5.4",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "hammerjs": "^2.0.8",
    "rxjs": "^6.0.0",
    "subscriptions-transport-ws": "^0.9.11",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.26"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint:html:fix lint:scss:fix lint:fix lint:ts:fix format:all",
      "pre-push": "run-s build"
    }
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular/cli": "~6.0.8",
    "@angular/compiler-cli": "^6.0.3",
    "@angular/language-service": "^6.0.3",
    "@ngrx/store-devtools": "^6.0.1",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "htmlhint": "^0.9.13",
    "husky": "^0.14.3",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ngrx-store-freeze": "^0.2.4",
    "protractor": "~5.3.0",
    "rxjs-tslint-rules": "^4.4.2",
    "stylelint-config-prettier": "^3.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.1.3",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "~2.7.2"
  }
}
